{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "lib": [
            "es2015",
            "es2017",
            "dom"
        ],
        "noImplicitReturns": true,
        "noImplicitAny": true
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
